@model ControlFilteredResults.Models.FileList

@{
    ViewData["Title"] = "Component Details";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Component Details</h2>

<div>
    <h4>FileList</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.FileNames != null)
        {
            @for (var index = 0; index < Model.FileNames.Count; index++)
            {
                <dt>
                    File Name @index
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FileNames[index].Name)
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
